<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11ff0000"
    tools:context=".MainActivity">

    <com.example.drawdot.DrawView
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_undo"
        android:layout_width="0dp"
        android:layout_height="@android:dimen/app_icon_size"
        android:text="@string/button_undo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_redo" />

    <Button
        android:id="@+id/button_redo"
        android:layout_width="0dp"
        android:layout_height="@android:dimen/app_icon_size"
        android:text="@string/button_redo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button_undo"
        app:layout_constraintRight_toLeftOf="@+id/button_status" />


    <Button
        android:id="@+id/button_status"
        android:layout_width="0dp"
        android:layout_height="@android:dimen/app_icon_size"
        android:text="@string/button_status"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button_redo"
        app:layout_constraintRight_toRightOf="parent" />


    <SeekBar
        android:id="@+id/seekBar3"
        android:layout_width="0dp"
        android:layout_height="@android:dimen/app_icon_size"
        app:layout_constraintBottom_toTopOf="@id/button_status"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>